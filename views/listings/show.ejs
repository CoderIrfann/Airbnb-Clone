<% layout("/layout/boilerplate") %>
  <div class="row mt-3">
    <div class="col-8 offset-2 ">
      <h3>
        <%=listings.title %>:
      </h3>
    </div>
    <div class="card col-6 offset-2">
      <img src="<%=listings.image  %>" class="card-img-top show-img" alt="Listing_image">
      <div class="card-body">
        <p class="card-text">
          <!-- <b>
            <%=listings.title %>
          </b>
          <br> -->
          <%=listings.description %> <br>
            &#8377; <%= listings.price.toLocaleString("en-IN") %>
              <br>
              <%=listings.location %>
                <br>
                <%=listings.country %>
        </p>
      </div>
    </div>
    <!-- ....................................................... -->
  </div>
  <br>
  <div class="btns">
    <a href="/listings/<%= listings._id %>/edit" class="btn btn-dark col-1 offset-2 add-btn">Edit</a>
    <form method="post" action="/listings/<%=listings._id  %>?_method=DELETE">
      <button class="btn btn-dark offset-4 add-btn  ">Delete</button>
    </form>
  </div>
  <div class="col-8 offset-2">
    <hr>
    <h4>Leave a Review</h4>
    <form action="/listings/<%= listings.id %>/reviews" method="post" nonvalidate class="needs-validation">
      <div class="mt-3 mb-3">
        <label for="rating" class="form-label">Rating</label>
        <input type="range" min="1" max="5" id="rating" name="reviews[rating] " class="form-range" >
      </div>
      <div class="mt-3 mb-3">
        <label for="comment"class="form-label">Comments</label>
        <textarea name="reviews[comment]"id="comment" cols="30" rows="5" class="form-control" required></textarea>
      </div>
      <button class="btn btn-outline-dark mt-3 mb-3">Submit</button>
    </form>
  </div>
  <!-- <script src="/js/script.js"></script> -->