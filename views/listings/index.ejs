        <h1>All Listings</h1>
        <div class="row row-cols-lg-3   row-cols-md-2   row-cols-sm-1">

            <% for(let listings of allListings){%>
                <a href="/listings/<%= listings._id %>" class="listings-links">
                    <div class="card col ">
                        <img src="<%= listings.image  %>" class="card-img-top" alt="listing_image"
                            style="height: 20rem;" />
                        <div class="card-img-overlay"></div>

                        <div class="card-body">
                            <p class="card-text">
                                <b>
                                    <%=listings.title %> <br>
                                </b>
                                &#8377; <%=listings.price %>/night
                            </p>
                        </div>
                    </div>
                    <%} %>
                </a>
        </div>


    </body>